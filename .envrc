export PATH="$HOME/.local/bin:$PATH"
export KERL_CONFIGURE_OPTIONS="--with-wx"

use_asdf() {
    source_env "$(asdf direnv envrc 2>/dev/null)" 2>/dev/null || {
        # Fallback: manually set up asdf from .tool-versions
        while IFS=' ' read -r plugin version; do
            [[ -z "$plugin" || "$plugin" == \#* ]] && continue
            local install_path
            install_path="$(asdf where "$plugin" "$version" 2>/dev/null)"
            if [[ -d "$install_path" ]]; then
                PATH_add "$install_path/bin"
            fi
        done < .tool-versions
    }
}

use_asdf
